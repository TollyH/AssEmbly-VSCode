{
  "name": "assembly-tolly",
  "displayName": "AssEmbly",
  "description": "AssEmbly syntax highlighting and other language features",
  "publisher": "TollyH",
  "author": {"name": "TollyH", "url": "https://github.com/TollyH"},
  "repository": {"type": "git", "url": "https://github.com/TollyH/AssEmbly-VSCode"},
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:assembly-tolly"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "assembly-tolly",
        "aliases": ["AssEmbly", "assembly-tolly"],
        "extensions": [".asm",".assembly",".ass"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "assembly-tolly",
        "scopeName": "source.assembly-tolly",
        "path": "./syntaxes/assembly-tolly.tmLanguage.json"
      }
    ],
    "configuration":[
      {
        "title": "AssEmbly",
        "properties": {
          "AssEmblyTolly.linterPath": {
            "type": "string",
            "default": "AssEmbly",
            "description": "The path to the AssEmbly executable that will provide source code linting. Default requires the executable to be on PATH. Must be version 1.1.0+"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
